{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "~*": ["./*"]
    },
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "esm": true
  },
  "exclude": ["node_modules"]
}
