{
  "compilerOptions": {
    "module": "ES2015",
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "~*": ["./*"]
    },
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules"]
}
